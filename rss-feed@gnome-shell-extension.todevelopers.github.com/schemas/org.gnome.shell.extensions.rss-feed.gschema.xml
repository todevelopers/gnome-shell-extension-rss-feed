<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="rss-feed-gnome-shell">
    <schema path="/org/gnome/shell/extensions/rss-feed/"
            id="org.gnome.shell.extensions.rss-feed">
        <key type="i" name="update-interval">
            <default>15</default>
            <summary>Update interval</summary>
            <description>Download interval (in minutes) for all RSS feeds.</description>
        </key>
        <key type="i" name="items-visible">
            <default>5</default>
            <summary>RSS Sources per page</summary>
            <description>Number of RSS Sources visible per page.</description>
        </key>
        <key type="b" name="send-notification">
            <default>true</default>
            <summary>Send notification</summary>
            <description>Send notification on new feed.</description>
        </key>
        <key type="as" name="rss-feeds-list">
            <default>[]</default>
            <summary>RSS feeds</summary>
            <description>List of RSS feeds sources.</description>
        </key>
        <key type="b" name="enable-debug">
            <default>false</default>
            <summary>Enable debug</summary>
            <description>Enable extension logs debug messages in Gnome logs provider.</description>
        </key>
    </schema>
</schemalist>
